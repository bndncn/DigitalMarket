<!DOCTYPE html>
<html>

    <head>
        <!-- Required meta tags always come first -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
    
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/styles.css">
        
        <title>Digital Market</title>    
    </head>

    <body>
        <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
            <div class="container">
                
                <!-- Collapsable Navbar for smaller screens-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="Navbar">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a class="nav-link" href="/"><span class="fa fa-home fa-lg"></span> Home</a></li>
                        <li class="nav-item active"><a class="nav-link" href="/items"><span class="fa fa-usd fa-lg"></span> Purchase Items</a></li>
                    </ul>
                    <span class="navbar-text">
                        <% if (id) { %>
                            <a>
                                <span class="fa fa-user col-sm-2"></span> <%= id %>
                            </a>
                            <a id="logout">
                                <span class="fa fa-sign-out col-sm-2"></span> Logout
                            </a>
                        <% } else { %>
                            <a id="signupbtn">
                                <span class="fa fa-user col-sm-2"></span> Sign Up
                            </a>
                            <a id="loginbtn">
                                <span class="fa fa-sign-in col-sm-2"></span> Login
                            </a>
                        <% } %>
                    </span>
                </div>   
            </div>
        </nav>

        <div id="loginModal" class="modal fade" role="dialog">
            <div class="modal-dialog modal-m" role="content">

                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class='col-11 modal-title text-center'>Login</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            &times;
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <form id="login" action="/login" method="post">                                  
                            <div>
                                <label for="id">Customer Id</label>
                                <div>
                                    <input type="text" id="id" name="id">
                                </div> 
                            </div>
                
                            <div>
                                <label for="password">Password</label>
                                <div>
                                    <input type="password" id="password" name="password">
                                </div> 
                            </div>

                            <div class="form-row">                               
                                <button type="submit" class="btn btn-primary btn-sm ml-auto">Login</button>        
                            </div>
                        </form>   
                    </div>
                </div>
            </div>
        </div>

        <div id="signupModal" class="modal fade" role="dialog">
            <div class="modal-dialog modal-m" role="content">

                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class='col-11 modal-title text-center'>Sign Up</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            &times;
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <form id="signup" action="/signup" method="post">                                   
                            <div>
                                <label for="id">Customer Id</label>
                                <div>
                                    <input type="text" id="id" name="id">
                                </div> 
                            </div>
                
                            <div>
                                <label for="firstname">First Name</label>
                                <div>
                                    <input type="text" id="firstname" name="firstname">
                                </div> 
                            </div>
                
                            <div>
                                <label for="lastname">Last Name</label>
                                <div>
                                    <input type="text" id="lastname" name="lastname">
                                </div> 
                            </div>
                
                            <div>
                                <label for="email">Email</label>
                                <div>
                                    <input type="text" id="email" name="email">
                                </div> 
                            </div>
                
                            <div>
                                <label for="phone">Phone</label>
                                <div>
                                    <input type="text" id="phone" name="phone", maxlength="10">
                                </div> 
                            </div>
                
                            <div>
                                <label for="address">Address</label>
                                <div>
                                    <input type="text" id="address" name="address">
                                </div> 
                            </div>            
                
                            <div>
                                <label for="password">Password</label>
                                <div>
                                    <input type="password" id="password" name="password">
                                </div> 
                            </div>

                            <div class="form-row">                               
                                <button type="submit" class="btn btn-primary btn-sm ml-auto">Sign Up</button>        
                            </div>
                        </form> 
                    </div>
                </div>
            </div>
        </div>

        <h1 class="text-center">Item Name: <%= item.Name %></h1>

        <div class="text-center">
            <div class="text-center">Item Type: <%= item.Type %></div>
            <div class="text-center">Seller Name: <%= item.FirstName %> <%= item.LastName %></div>
            <div class="text-center">Quantity Left: <%= item.Quantity %></div>
            <div class="text-center">Price Per Item: $<%= item.Price %></div>
            <div class="text-center">Description: <%= item.Description %></div>
        </div>

        <form class="text-center" id="purchase" action="/purchase" method="post">
            <header>
                <h3>Purchase Item</h3>
            </header>            
            
            <div>
                <label for="quantity">Quantity to Buy</label>
                <div>
                    <input type="text" id="quantity" name="quantity">
                </div> 
            </div>  
            
            <div>
                <input type="submit" value="Purchase">
            </div>
        </form>

        <div class="text-center" id="reviews">
            <form id="addreview" action="/addreview" method="post">
                <header>
                    <h3>Write a Review</h3>
                </header>            
                
                <div>
                    <label for="title">Review Title</label>
                    <div>
                        <input type="text" id="title" name="title">
                    </div> 
                </div>
    
                <div>
                    <label for="rating">Rating</label>
                </div>

                <div>
                    <input type="radio" id="rating" name="rating" value="1"> 1<br>
                    <input type="radio" id="rating" name="rating" value="2"> 2<br>
                    <input type="radio" id="rating" name="rating" value="3"> 3<br>  
                    <input type="radio" id="rating" name="rating" value="4"> 4<br>
                    <input type="radio" id="rating" name="rating" value="5"> 5<br>
                </div>

                <div>
                    <label for="review">Review</label>
                    <div>
                        <textarea id="review" name="review"></textarea>
                    </div> 
                </div>   
                
                <div>
                    <input type="submit" value="Submit Review">
                </div>
            </form>

            <h3>Reviews:</h3>

            <% if (reviews == undefined) { %>
                <h3>No Reviews</h3>
            <% } else { %>
                <% for (let i = 0; i < reviews.length; i++) { %>
                    <div>
                        <div>Review Title: <%= reviews[i].Title %></div>
                        <div>Reviewer: <%= reviews[i].BuyerId %></div>
                        <div>Rating: <%= reviews[i].Rating %></div>
                        <div><%= reviews[i].DetailedReview %></div>
                    </div>
                <% } %>
            <% } %>
        </div>

        <a href="/">
            <button class="text-center">Back to homepage</button>
        </a>

        <a href="/items">
            <button class="text-center">Back to list of items</button>
        </a>

    </body>
    <script src='../../node_modules/jquery/dist/jquery.min.js'></script>
    <script src="../../node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="../../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src='../../controllers/form_controller.js'></script>
</html>
